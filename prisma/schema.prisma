generator client {
   provider = "prisma-client-js"
   output   = "./generated/client"
}

datasource db {
   provider = "sqlite"
   url      = "file:./dev.db"
}

model User {
   id       Int     @id @default(autoincrement())
   email    String  @unique
   password String
   name     String?

   // Relations
   recipes Recipe[]
   ratings Rating[] // Fixed typo
}

model Recipe {
   id          Int     @id @default(autoincrement())
   title       String
   description String?
   image       String?
   userId      Int
   prepTime    Int // In minutes
   private     Boolean @default(true)

   // Relations
   ingredients  Ingredient[]
   instructions Instruction[]
   ratings      Rating[]

   // Foreign Key
   user User @relation(fields: [userId], references: [id])

   @@unique([title, userId])
}

model Ingredient {
   id       Int     @id @default(autoincrement())
   name     String
   quantity Decimal
   unit     String
   recipeId Int

   // Foreign key
   recipe Recipe @relation(fields: [recipeId], references: [id])
}

model Instruction {
   id       Int    @id @default(autoincrement())
   step     Int
   content  String
   recipeId Int

   // Foreign key
   recipe Recipe @relation(fields: [recipeId], references: [id])

   @@unique([step, recipeId])
}

model Rating {
   userId   Int
   recipeId Int
   stars    Int     @default(0)
   liked    Boolean @default(false)
   saved    Boolean @default(false)

   // Foreign keys
   user   User   @relation(fields: [userId], references: [id])
   recipe Recipe @relation(fields: [recipeId], references: [id])

   @@id([userId, recipeId]) // Composite primary key
}
